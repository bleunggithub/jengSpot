		<%- include('partials/head') %>

		<!-- custom -->
		<!-- dashboard  -->
		<link
			rel="stylesheet"
			type="text/css"
			href="../assets/styleFav.css"
		/>
	</head>

	<body>
		<!-- navbar  -->
		<%- include("partials/navbar") %>

		<!-- clouds in the background -->
		<%- include("partials/bg") %>


		<!-- content -->
		<div class="outerDBContainer container-fluid">
			<div class="dashboardRow row justify-content-center">
				<div class="col-lg-3 col-md-3 col-sm-10 dashboardLeft">
					<div class="fixedWrapper col-lg-4 col-md-4 col-sm-10">
					<div class="col-12 userDetails">
						<div class="col-3 userPhotoDiv">
							<img
								src="<%- ownPost[0].users_userPhoto%>"
								alt="userPhoto"
								class="userPhoto"
							/>
						</div>
						<div class="col-4 userTextDiv">
							<h5 class="username"><%= ownPost[0].users_username %></h5>
						</div>
					</div>
					<div class="col-12 ownPost filter">

							<form action="#" method="POST">
								<select name="selectPost" id="whatSelector" onChange="location = this.options[this.selectedIndex].value;">

									<option value="#" selected>What do you want to see?</option>
									<option value="/posts/fav">Favourite</option>
                                    <option value="/posts/ownPost">My Post</option>

								</select>
							</form>

					</div>
					</div>
				</div>
				<!-- dashboard right content -->
				<div class="col-lg-5 col-md-5 col-sm-10 dashboardRight">

                    <% if (typeof param == 'undefined' || param == 'fav'){ %>
                    
					<% favPost.forEach((post)=>{ %>

					<div class="col-12 container-fluid trendingPost">
						<div class="row">
							<div class="col-lg-2 col-md-2 col-sm-2 trendingUserPhotoDiv">
								<img
									src="<%- post[0].users_userPhoto%>"
									alt="userPhoto"
									class="trendingUserPhoto"
								/>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 trendingUserContentDiv">
								<h6 class="trendingUsername">
									<strong><%= post[0].users_username%></strong>
								</h6>
								<p class="trendingDate"><%= post[0].postDate%></p>
								<h6 class="trendingTitle"><%= post[0].postTitle%></h6>
								<p class="trendingContent"><%= post[0].postContent%></p>
								<br />
								<p class="trendingContent">Address: <%= post[0].postAddress%></p>
								<br />
								<div class="col-12 counters">
									<span>
										<i
											class="fas fa-heart"
											id="<%-post[0].id%>"
											style="cursor: pointer"
										></i>
									</span>

									<span>
										<a href="/post/<%-post[0].id%>">
											<i class="fas fa-comment-alt"></i>
										</a>
										&nbsp; <%= post[0].received_comments %>
									</span>
									<span>
										<a href="/post/<%-post[0].id%>"></a>
											<i class="fas fa-globe-asia"></i>
										</a>
									</span>
								</div>
							</div>
							<br />
							<div class="container-fluid">
								<div class="col-12 trendingPhotoDiv">
									<img src="<%- post[0].postPhoto%>" class="trendingPhoto" />
								</div>
							</div>
						</div>
					</div>
                    <% }) %>
                    <% } else { %>

                    <% ownPost.forEach((post)=>{ %>

					<div class="col-12 container-fluid trendingPost">
						<div class="row">
							<div class="col-lg-2 col-md-2 col-sm-2 trendingUserPhotoDiv">
								<img
									src="<%- post.users_userPhoto%>"
									alt="userPhoto"
									class="trendingUserPhoto"
								/>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 trendingUserContentDiv">
								<h6 class="trendingUsername">
									<strong><%= post.users_username%></strong>
								</h6>
								<p class="trendingDate"><%= post.postDate%></p>
								<h6 class="trendingTitle"><%= post.postTitle%></h6>
								<p class="trendingContent"><%= post.postContent%></p>
								<br />
								<p class="trendingContent">Address: <%= post.postAddress%></p>
								<br />
								<div class="col-12 counters">
									<span>
										<i
											class="fas fa-heart"
											id="<%-post.id%>"
											style="cursor: pointer"
										></i>
									</span>

									<span>
										<a href="/post/<%-post.id%>">
											<i class="fas fa-comment-alt"></i>
										</a>
										&nbsp; <%= post.received_comments %>
									</span>
									<span>
										<a href="/post/<%-post.id%>"></a>
											<i class="fas fa-globe-asia"></i>
										</a>
									</span>
								</div>
							</div>
							<br />
							<div class="container-fluid">
								<div class="col-12 trendingPhotoDiv">
									<img src="<%- post.postPhoto%>" class="trendingPhoto" />
								</div>
							</div>
						</div>
					</div>
                    <% }) %>
                    <% } %>
				</div>
			</div>
		</div>

	<%- include('partials/scripts') %>

		<!-- custom -->
		<script src="../assets/frontend.js"></script>
		<script src="../assets/frontendFav.js"></script>
	</body>
	<!-- Icons made by <a href="http://www.freepik.com/" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/"
    title="Flaticon"> www.flaticon.com</a> -->
</html>
